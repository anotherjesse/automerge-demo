{
    "env": {
        "browser": true,
        "worker": true,
        "es2021": true
    },
    "extends": [
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "never"],
        "@typescript-eslint/semi": ["error", "never"],
        "import/no-unresolved": "off", /* it wasn't recognizing things vite builds */
        "import/extensions": "off" /* same */
    }
}
